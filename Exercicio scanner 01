package aula03;
import java.util.Scanner;

public class Exercicio01 {

	public static void main(String[] args) {
	Scanner scanner = new Scanner(System.in);
	//solicitando e lendo o nome da pessoa
	
	System.out.print("Digite o nome da pessoa");
	String nome = scanner.nextLine();
	
	//solicitando e lendo a idade da pessoa
	
	System.out.print("Digite a idade da pessoa do:" + nome + ":");
	int idade = scanner.nextInt();
	
	
	//emitindo a mensagem com o nome e a idade da pessoa
	
	System.out.print( nome + "tem" +idade + "anos");
	scanner.close();
	
	
	

	}

}
