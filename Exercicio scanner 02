package aula03;
import java.util.Scanner;

public class Exercicio02 {

	public static void main(String[] args) {
	Scanner scanner = new Scanner(System.in);
	//solicitando e lendo o nome da pessoa
	
	System.out.print("Digite o nome da pessoa");
	String nome = scanner.nextLine();
	
	//solicitando e lendo a idade da pessoa e batimento
	
	System.out.print("Digite a idade da pessoa e batimento:" + nome + ":");
	int idade = scanner.nextInt();
	int batimento = idade+100;
	
	
	//emitindo a mensagem com o nome e a idade da pessoa
	
	System.out.print( nome + "tem" +idade + "anos" +batimento+ "batimento");	
	
	

	}

}
